{
  "name": "jschool",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build:client:css": "postcss -c ./scripts/postcss.config.js -o ./dist/client/bundle.css ./src/client/index.css",
    "build:client:html": "./scripts/build-html.js < ./src/client/index.html > ./dist/client/index.html",
    "build:client:images": "cp ./src/client/favicon.png ./dist/client/favicon.png",
    "build:client:js": "node ./scripts/build-js.js",
    "build:client:js:monaco": "cp -r ./node_modules/monaco-editor/min/vs/ ./dist/client/vs/ && chmod -R +r ./dist",
    "build:client": "npm run build:client:js:monaco && npm run build:client:js && npm run build:client:html && npm run build:client:images && npm run build:client:css",
    "build:server": "tsc --outDir dist src/server/index.ts",
    "build": "npm run clean && npm run build:client && npm run build:server",
    "clean": "rm -rf dist; mkdir -p dist/client/vs/editor",
    "deploy": "ssh root@tsedit.co 'bash -s' < ./scripts/deploy.sh",
    "lint:js": "tslint src",
    "start": "IS_PROD=true node ./dist/index.js",
    "start:dev": "reload -d ./dist",
    "tdd": "concurrently -k 'npm run serve:dev' 'npm run watch'",
    "test": "exit 0",
    "watch:css": "postcss -w -c ./scripts/postcss.config.js -o ./dist/client/bundle.css ./src/client/index.css",
    "watch:html": "watch \"npm run build:client:html\" src/client/",
    "watch:js": "node ./scripts/watch-js.js",
    "watch": "npm run clean; npm run build:client:js:monaco; concurrently -k 'npm run watch:js' 'npm run watch:html' 'npm run watch:css'"
  },
  "author": "Boris Cherny <boris@performancejs.com> (https://performancejs.com)",
  "license": "MIT",
  "devDependencies": {
    "@types/compression": "0.0.33",
    "@types/express": "^4.0.36",
    "@types/highlight.js": "^9.1.9",
    "@types/markdown-it": "0.0.2",
    "@types/node": "^7.0.31",
    "@types/react": "^15.0.28",
    "@types/react-dom": "^15.5.0",
    "browserify": "^14.4.0",
    "browserify-shim": "^3.8.14",
    "concurrently": "^3.4.0",
    "node-static": "^0.7.9",
    "postcss": "^6.0.2",
    "postcss-cli": "^4.1.0",
    "postcss-cssnext": "^2.11.0",
    "postcss-import": "^10.0.0",
    "postcss-inline-svg": "^3.0.0",
    "postcss-svgo": "^2.1.6",
    "reload": "^1.1.5",
    "rework-import": "^2.1.0",
    "rework-npm": "^1.0.0",
    "rework-plugin-inline": "^1.0.1",
    "tsify": "^3.0.1",
    "tslint": "^5.4.3",
    "typescript": "^2.3.4",
    "watch": "^1.0.2",
    "watchify": "^3.9.0"
  },
  "dependencies": {
    "compression": "^1.6.2",
    "express": "^4.15.3",
    "highlight.js": "^9.12.0",
    "letsencrypt-express": "^2.0.6",
    "lodash": "^4.17.4",
    "markdown-it": "^8.3.1",
    "monaco-editor": "^0.8.3",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "source-map-support": "^0.4.15"
  },
  "browserify": {
    "transform": [
      "browserify-shim"
    ]
  },
  "browserify-shim": {
    "react": "global:React",
    "react-dom": "global:ReactDOM"
  }
}

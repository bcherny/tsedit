{
  "name": "jschool",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build:css": "postcss -c ./scripts/postcss.config.js -o ./dist/bundle.css ./src/index.css",
    "build:html": "./scripts/build-html.js < ./src/index.html > ./dist/index.html",
    "build:js": "node ./scripts/build-js.js",
    "build:js:monaco": "cp -r ./node_modules/monaco-editor/min/vs/ ./dist/vs/ && chmod -R +r ./dist",
    "build": "npm run clean; concurrently -k 'npm run build:js' 'npm run build:js:monaco' 'npm run build:html' 'npm run build:css'",
    "clean": "rm -rf dist; mkdir -p dist/vs/editor",
    "lint:js": "tslint src",
    "serve": "static dist",
    "serve:dev": "reload -d ./dist",
    "tdd": "concurrently -k 'npm run serve:dev' 'npm run watch'",
    "watch:css": "postcss -w -c ./scripts/postcss.config.js -o ./dist/bundle.css ./src/index.css",
    "watch:html": "watch \"npm run build:html\" src/",
    "watch:js": "node ./scripts/watch-js.js",
    "watch": "npm run clean; npm run build:js:monaco; concurrently -k 'npm run watch:js' 'npm run watch:html' 'npm run watch:css'"
  },
  "author": "Boris Cherny <boris@performancejs.com> (https://performancejs.com)",
  "license": "MIT",
  "devDependencies": {
    "@types/highlight.js": "^9.1.9",
    "@types/markdown-it": "0.0.2",
    "@types/node": "^7.0.31",
    "@types/react": "^15.0.28",
    "@types/react-dom": "^15.5.0",
    "@types/requirejs": "^2.1.29",
    "browserify": "^14.4.0",
    "browserify-shim": "^3.8.14",
    "concurrently": "^3.4.0",
    "postcss": "^6.0.2",
    "postcss-cli": "^4.1.0",
    "postcss-cssnext": "^2.11.0",
    "postcss-import": "^10.0.0",
    "postcss-inline-svg": "^3.0.0",
    "postcss-svgo": "^2.1.6",
    "reload": "^1.1.5",
    "rework-import": "^2.1.0",
    "rework-npm": "^1.0.0",
    "rework-plugin-inline": "^1.0.1",
    "tsify": "^3.0.1",
    "tslint": "^5.4.3",
    "typescript": "^2.3.4",
    "watch": "^1.0.2",
    "watchify": "^3.9.0"
  },
  "dependencies": {
    "highlight.js": "^9.12.0",
    "lodash": "^4.17.4",
    "markdown-it": "^8.3.1",
    "monaco-editor": "^0.8.3",
    "node-static": "^0.7.9",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "source-map-support": "^0.4.15"
  }
}

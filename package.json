{
  "name": "tsedit",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build:client:css": "postcss ./src/client/index.css --config ./scripts/postcss.config.js -o ./dist/client/bundle.css",
    "build:client:html": "./scripts/build-html.js < ./src/client/index.html > ./dist/client/index.html",
    "build:client:images": "cp ./src/client/favicon.png ./dist/client/favicon.png",
    "build:client:js": "node ./scripts/build-js.js",
    "build:client:js:monaco": "cp -r ./node_modules/monaco-editor/min/vs/. ./dist/client/vs/ && chmod -R +r ./dist",
    "build:client": "npm run build:client:js:monaco && npm run build:client:js && npm run build:client:html && npm run build:client:images && npm run build:client:css",
    "build:server": "tsc --outDir dist src/server/index.ts",
    "build": "npm run clean && npm run build:client && npm run build:server",
    "clean": "rm -rf dist; mkdir -p dist/client/vs/editor",
    "deploy": "ssh root@tsedit.co 'bash -s' < ./scripts/deploy.sh",
    "lint:js": "tslint src",
    "start": "IS_PROD=true pm2 start ./dist/index.js --name tsedit",
    "start:dev": "reload -d ./dist/client",
    "stop": "pm2 stop tsedit",
    "tdd": "concurrently -k 'npm run serve:dev' 'npm run watch'",
    "test": "exit 0",
    "watch:css": "postcss ./src/client/index.css --config ./scripts/postcss.config.js -o ./dist/client/bundle.css -w",
    "watch:html": "watch \"npm run build:client:html\" src/client/",
    "watch:js": "node ./scripts/watch-js.js",
    "watch": "npm run clean; npm run build:client:js:monaco; concurrently -k 'npm run watch:js' 'npm run watch:html' 'npm run watch:css' 'npm run start:dev'"
  },
  "author": "Boris Cherny <boris@performancejs.com> (https://performancejs.com)",
  "license": "MIT",
  "devDependencies": {
    "@types/compression": "0.0.35",
    "@types/express": "^4.11.1",
    "@types/highlight.js": "^9.12.2",
    "@types/lodash": "^4.14.102",
    "@types/markdown-it": "0.0.4",
    "@types/node": "^9.4.4",
    "@types/react": "^16.0.36",
    "@types/react-dom": "^16.0.3",
    "browserify": "^16.0.0",
    "browserify-shim": "^3.8.14",
    "concurrently": "^3.5.1",
    "node-static": "^0.7.10",
    "postcss": "^6.0.17",
    "postcss-cli": "^5.0.0",
    "postcss-cssnext": "^3.1.0",
    "postcss-import": "^11.1.0",
    "postcss-inline-svg": "^3.0.0",
    "postcss-svgo": "^2.1.6",
    "reload": "^2.2.2",
    "rework-import": "^2.1.0",
    "rework-npm": "^1.0.0",
    "rework-plugin-inline": "^1.0.1",
    "tsify": "^3.0.4",
    "tslint": "^5.9.1",
    "typescript": "^2.7.1",
    "watch": "^1.0.2",
    "watchify": "^3.10.0"
  },
  "dependencies": {
    "compression": "^1.7.1",
    "express": "^4.16.2",
    "highlight.js": "^9.12.0",
    "lodash": "^4.17.5",
    "markdown-it": "^8.4.0",
    "monaco-editor": "^0.10.1",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "source-map-support": "^0.5.3"
  },
  "browserify": {
    "transform": [
      "browserify-shim"
    ]
  },
  "browserify-shim": {
    "lodash": "global:_",
    "react": "global:React",
    "react-dom": "global:ReactDOM"
  }
}
